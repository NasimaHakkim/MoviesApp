<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="learn.android.retrofitgithub.MainActivity">



    <Button
        android:id="@+id/submitButtonMovies"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintVertical_bias="0.034"
        app:layout_constraintEnd_toStartOf="@+id/submitButtonTv"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/submitButtonTv"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="Tv list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/submitButtonMovies"
        android:layout_marginStart="4dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="322dp"
        android:layout_height="480dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        tools:layout_editor_absoluteY="71dp" />


</android.support.constraint.ConstraintLayout>
